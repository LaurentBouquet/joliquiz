{% extends 'base.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block body %}

<div class="example-wrapper">

    <img src="https://raw.githubusercontent.com/LaurentBouquet/joliquiz/assets/JoliQuiz.png" alt="JoliQuiz">

    <div class="jumbotron">
        <h1>Sign up</h1>

        {{ form_start(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
            {{ form_row(form.termsAccepted) }}

            <button class="btn btn-primary float-md-right" type="submit"><i class="fas fa-user-plus"></i> Register</button>
        {{ form_end(form) }}

    </div>

</div>

{% include 'home_bottom.html.twig' %}

{% endblock %}
