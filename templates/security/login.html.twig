{% extends 'base.html.twig' %}

{% block title %}
	{{'Sign in'|trans}}
{% endblock %}

{% block body %}

<div
	class="example-wrapper">

	<img src="/images/JoliQuiz-300x111_smiley.png" alt="JoliQuiz">

	<div class="jumbotron">
		<h1>
			<i class="fa fa-lock"></i>
			{{'Sign in'|trans}}</h1>

		{# {% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %} #}

		<form action="{{ path('app_login') }}" method="post">

			<div class="form-group">
				<label for="username" class="required">Email:</label>
				<input required="required" maxlength="180" class="form-control" type="text" id="username" name="_username" value="{{ last_username }}">
			</div>
			<div class="form-group">
				<label for="password" class="required">Password:</label>
				<input required="required" maxlength="180" class="form-control" type="password" id="password" name="_password">
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn btn-primary float-md-right" type="submit">
				<i class="fas fa-sign-in-alt"></i>
				{{'Login'|trans}}</button>

			<a href="{{ path('app_forgot_password_request') }}">{{'Forgot your password'|trans}}</a>

		</div>


		{% if MAIN_ALLOW_USER_ACCOUNT_CREATION is defined %}
			{% if MAIN_ALLOW_USER_ACCOUNT_CREATION > 0 %}
				<h6 class="text-center">
					{% trans %}Sign up if you do not have an account. It's simple and fast.{% endtrans %}
					<a href="{{ path('app_register') }}">{{'I create my free account...'|trans}}</a>
				</h6>
			{% endif %}    
		{% endif %}   
		
	</div>

{% include '_home_bottom.html.twig' %}

{% endblock %}