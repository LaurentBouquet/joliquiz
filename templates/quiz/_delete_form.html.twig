{% if is_granted('ROLE_TEACHER') %}
    <form method="post" action="{{ path('quiz_delete', {'id': quiz.id}) }}" onsubmit="return confirm('{{'Are you sure you want to delete this quiz?'|trans}}');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.id) }}">
        <button class="btn btn-danger btn-sm mr-2"><i class="fas fa-trash-alt"></i> {{'Delete'|trans}}</button>
    </form>
{% endif %}
