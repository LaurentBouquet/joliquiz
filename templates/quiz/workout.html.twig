{% extends 'base.html.twig' %}

{% block title %}{{'Quiz'|trans}}{% endblock %}

{% block body %}
    <h1>
        "{{ quiz.title }}" ({{ questionNumber }}/{{ quiz.numberOfQuestions }}) &nbsp;
        {% if (questionResult==1) %}
            <i class="fas fa-thumbs-up" style="font-size:30px; color: green"></i>
            <!-- #d4edda -->
        {% endif %}
        {% if (questionResult==-1) %}
            <i class="fas fa-thumbs-down" style="font-size:30px; color: red"></i>
            <!-- #f8d7da -->
        {% endif %}
    </h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="progress" style="height: 10px;">
            <div class="progress-bar" role="progressbar" style="width: {{progress}}%;" aria-valuenow="{{progress}}" aria-valuemin="0" aria-valuemax="100"></div>
        </div>

        {% if (is_granted('ROLE_USER')) or (quiz.allowAnonymousWorkout) %}
            <button class="mt-3 float-right btn btn-primary mr-2" type="submit">{{ button_label|default('Next'|trans) }} <i class="fas fa-arrow-circle-right"></i></button>
        {% endif %}

    {{ form_end(form) }}

{% endblock %}
