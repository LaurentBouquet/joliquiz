{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Shortname</th>
                <td>{{ category.shortname }}</td>
            </tr>
            <tr>
                <th>Longname</th>
                <td>{{ category.longname }}</td>
            </tr>
            <tr>
                <th>Quizzes</th>
                <td>
                  {% for quiz in category.quizzes %}
                     - {{ quiz.title }} <br>
                  {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}">back to list</a>

    {% if is_granted('ROLE_TEACHER') %}
        <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
    {% endif %}

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
