{% extends 'base.html.twig' %}

{% block title %}{{'Sign up'|trans}}{% endblock %}

{% block body %}

<div class="example-wrapper">

    <!-- <img src="https://raw.githubusercontent.com/LaurentBouquet/joliquiz/assets/JoliQuiz.png" alt="JoliQuiz"> -->

    <div class="jumbotron">
        <h1>{{'Sign up'|trans}}</h1>

        {{ form_start(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
            {{ form_row(form.termsAccepted) }}
            <a href="terms_and_conditions.pdf" target="_blank">{{ 'Terms and conditions'|trans }}</a>
            <button class="btn btn-primary float-md-right" type="submit"><i class="fas fa-user-plus"></i> {{'Register'|trans}}</button>
        {{ form_end(form) }}

    </div>

</div>

{% include 'home_bottom.html.twig' %}

{% endblock %}
