{% extends 'base.html.twig' %}

{% block title %}{{ 'Reset your password'|trans }}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>{{ 'Forgot your password?'|trans }}</h1>
    <p>{{ 'Please enter your email address, we will send you an email to re-initialize your password.'|trans }}</p>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        
        <button class="btn btn-primary">{{ 'Send password reset email'|trans }}</button>
    {{ form_end(requestForm) }}
{% endblock %}
