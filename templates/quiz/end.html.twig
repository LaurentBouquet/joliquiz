{% extends 'base.html.twig' %}

{% block title %}End Quiz "{{ quiz.title }}{% endblock %}

{% block body %}
    <h1>End Quiz "{{ id }}"</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Categories</th>
                <td>
                  {% for category in quiz.categories %}
                     - {{ category.longname }} <br>
                  {% endfor %}
                </td>
            </tr>
            {% if quiz.summary %}
            <tr>
                <th>Summary</th>
                <td>{{ quiz.summary }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Number of questions</th>
                <td>{{ quiz.numberOfQuestions }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary mr-2" href="{{ path('quiz_index') }}"><i class="fas fa-chevron-left"></i> {{'Back to list'|trans}}</a>


{% endblock %}
