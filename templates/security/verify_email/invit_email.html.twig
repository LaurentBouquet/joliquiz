{% extends 'base_without_menu.html.twig' %}

{% block title %}{{ 'Email address confirmation email sent'|trans }}{% endblock %}

{% block body %}
    <p>
        {{ 'Your user account has been successfully created and we thank you :-)'|trans }} 
    </p>
    <p>     
        {{ 'An email has just been sent containing a link for you to confirm your email address: %user_email%.'|trans({'%user_email%': user_email}) }}<br/>
        {{ 'This link will expire in'|trans }} {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.            
    </p>
    <p>{{ "If you don't receive an email please check your spam folder."|trans }}</p>
{% endblock %}
