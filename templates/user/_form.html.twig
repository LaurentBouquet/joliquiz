{{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.isActive) }}
    {{ form_row(form.roles) }}

    <a class="btn btn-secondary" href="{{ path('user_index') }}"><i class="fas fa-arrow-circle-left"></i> {{'Back to list'|trans}}</a>
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <button class="btn btn-primary"><i class="fas fa-check"></i> {{ button_label|default('Save'|trans) }}</button>
    {% endif %}

{{ form_end(form) }}
