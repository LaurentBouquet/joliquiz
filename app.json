{
    "name": "JoliQuiz",
    "description": "Online quiz software.",
    "repository": "https://github.com/LaurentBouquet/joliquiz",
    "logo": "https://raw.githubusercontent.com/LaurentBouquet/joliquiz/assets/JoliQuiz_logo.png",
    "keywords": [
        "php",
        "symfony",
        "quiz",
        "quizapp",
        "student",
        "teacher",
        "examination"
    ],
    "addons": [
        {
            "plan": "heroku-postgresql",
            "options": {
                "version": "9.5" 
            }
        }
    ],
    "buildpacks": [
        {
        "url": "heroku/php"
        },
        {
        "url": "https://github.com/weibeld/heroku-buildpack-run"
        }
    ],
    "env": {
        "APP_ENV": {
            "description": "Set the Symfony environment (prod, dev or test).",
            "value": "prod"
        }
    }
}
