{% extends 'base.html.twig' %}

{% block title %}{{'Question index'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Question index'|trans}}</h1>

    {% if is_granted('ROLE_TEACHER') %}
        <div class="mb-3">
            <a class="btn btn-primary" href="{{ path('question_new') }}"><i class="fas fa-plus"></i> {{'Create new question'|trans}}</a>
        </div>
    {% endif %}

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <th>{{ 'Text'|trans }}</th>
                <th>{{ 'Categories'|trans }}</th>
                {% if is_granted('ROLE_TEACHER') %}
                    <th>{{ 'Answers'|trans }}</th>
                    <th>{{ 'Actions'|trans }}</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.text }}</td>
                <td>
                  {% for category in question.categories %}
                     - {{ category.shortname }} <br>
                  {% endfor %}
                </td>
                {% if is_granted('ROLE_TEACHER') %}
                    <td>
                      {% for answer in question.answers %}
                         {% if answer.correct %}+{% else %}-{% endif %} {{ answer.text }} <br>
                      {% endfor %}
                    </td>
                    <td>
                        <div class="form-check-inline">
                            <a class="btn btn-primary btn-sm mr-2" href="{{ path('question_show', {'id': question.id}) }}"><i class="fas fa-eye"></i> {{'Show'|trans}}</a>
                            {% if is_granted('ROLE_TEACHER') %}
                                <a class="btn btn-primary btn-sm mr-2" href="{{ path('question_edit', {'id': question.id}) }}"><i class="fas fa-pencil-alt"></i> {{'Edit'|trans}}</a>
                                {{ include('question/_delete_form.html.twig') }}
                            {% endif %}
                        </div>
                    </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
