{% extends 'base.html.twig' %}

{% block title %}Starting Quiz "{{ quiz.title }}{% endblock %}

{% block body %}
    <h1>Starting Quiz "{{ quiz.title }}"</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Categories</th>
                <td>
                  {% for category in quiz.categories %}
                     - {{ category.longname }} <br>
                  {% endfor %}
                </td>
            </tr>
            {% if quiz.summary %}
            <tr>
                <th>Summary</th>
                <td>{{ quiz.summary }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Number_of_questions</th>
                <td>{{ quiz.numberOfQuestions }}</td>
            </tr>
        </tbody>
    </table>


    <form action="{{ path('quiz_workout', {'id': id}) }}" method="post">
        <a class="btn btn-primary mr-2" href="{{ path('quiz_index') }}"><i class="fas fa-arrow-circle-left"></i> {{'Back to list'|trans}}</a>
        {% if is_granted('ROLE_USER') %}
            <button class="btn btn-primary mr-2" type="submit">{{ button_label|default('Next'|trans) }} <i class="fas fa-arrow-circle-right"></i></button>
        {% endif %}
    </form>

{% endblock %}
