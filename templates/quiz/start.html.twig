{% extends 'base.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block body %}
    <h1>Quiz "{{ quiz.title }}"</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Categories</th>
                <td>
                  {% for category in quiz.categories %}
                     - {{ category.longname }} <br>
                  {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ quiz.summary }}</td>
            </tr>
            <tr>
                <th>Number_of_questions</th>
                <td>{{ quiz.numberOfQuestions }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('quiz_index') }}">back to list</a>

    {% if is_granted('ROLE_USER') %}
        <a href="{{ path('quiz_workout', {'id': quiz.id}) }}">next</a>
    {% endif %}

    {{ include('quiz/_delete_form.html.twig') }}
{% endblock %}
