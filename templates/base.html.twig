<!DOCTYPE html>
<html lang="{{ (locale ?? 'en')|upper }}">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" href="/images/favicon.ico">

        <title>JoliQuiz -
            {% block title %}{% endblock %}
        </title>

        {% block stylesheets %}{% endblock %}

        <!-- Bootstrap core CSS -->
        <link rel="stylesheet" href="/css/bootstrap.min.css">

        <!-- Custom styles for this template -->
        <link rel="stylesheet" href="/css/style.css">

        <!-- Fonts Awesome CSS -->
        <link rel="stylesheet" href="/css/fontawesome.css">

    </head>

    <body>

        <nav class="navbar navbar-expand-md navbar-dark bg-primary fixed-top">
            <a class="navbar-brand text-warning" title="JoliQuiz" href="/"><img src="/images/logo_MENU.png" height="32" alt="JoliQuiz"></a>
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav mr-auto">
                    <li>
                        <span class="nav-link active text-dark">{{ (locale ?? 'en')|upper }}</span>
                    </li>
                    
                    {% if is_granted('ROLE_USER') %}
                        <li>
                            <a class="nav-link {% if '/quiz/' in app.request.server.get('REQUEST_URI') %} active {% endif %}" href="{{ path('quiz_index') }}">{{'Quizzes'|trans}}</a>
                        </li>
                    {% endif %}
                    {% if is_granted('ROLE_TEACHER') %}
                        <li>
                            <a class="nav-link {% if '/question/' in app.request.server.get('REQUEST_URI') %} active {% endif %}" href="{{ path('question_index') }}">{{'Questions'|trans}}</a>
                        </li>
                        <li>
                            <a class="nav-link {% if '/category/' in app.request.server.get('REQUEST_URI') %} active {% endif %}" href="{{ path('category_index') }}">{{'Categories'|trans}}</a>
                        </li>
                        <li>
                            <a class="nav-link {% if '/user/' in app.request.server.get('REQUEST_URI') %} active {% endif %}" href="{{ path('user_index') }}">{{'Users'|trans}}</a>
                        </li>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li>
                            <a class="nav-link {% if '/group/' in app.request.server.get('REQUEST_URI') %} active {% endif %}" href="{{ path('group_index') }}">{{'Groups'|trans}}</a>
                        </li>
                    {% endif %}
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <!--
                        <li>
                            <a class="nav-link {% if '/school/' in app.request.server.get('REQUEST_URI') %} active {% endif %}" href="{{ path('school_index') }}">{{'Schools'|trans}}</a>
                        </li>
                    -->
                    {% endif %}                    

                </ul>
                <ul class="navbar-nav">
                    {% if is_granted('ROLE_USER') %}
                        {% if app.user %}   
                            {% if (is_granted('ROLE_TEACHER')) %}
                                    <li>                                             
                                        <a class="nav-link" href="{{ path('user_profile') }}">
                                            <span><i class="fas fa-user"></i> <strong>{{ app.user.username }}</strong></span>
                                        </a>
                                    </li>
                            {% else %}
                                {% if quiz is not defined %}
                                    <li>                                             
                                        <a class="nav-link" href="{{ path('user_profile') }}">
                                            <span><i class="fas fa-user"></i> <strong>{{ app.user.username }}</strong></span>
                                        </a>
                                    </li>
                                {% endif %}                            
                            {% endif %}
                        {% endif %}                        
                        <li>
                            <a class="nav-link" href="{{ path('app_logout') }}">{{'Logout'|trans}}</a>
                        </li>
                    {% else %}
                        <li>
                            <a class="nav-link {% if '/register' in app.request.server.get('REQUEST_URI') %} active {% endif %}" href="{{ path('app_register') }}">{{'Sign up'|trans}}</a>
                        </li>
                        <li>
                            <a class="nav-link {% if '/login' in app.request.server.get('REQUEST_URI') %} active {% endif %}" href="{{ path('app_login') }}">{{'Sign in'|trans}}</a>
                        </li>
                    {% endif %}
                </ul>
            </div>

        </nav>

        <main role="main" class=""> <!-- class="container" -->

            <div class="starter-template">
                <div class="col-md-12 col-lg-12 col-xl-12 py-4">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }}" role="alert">
                                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
                <div class="col-sm-12">
                    {% block body %}{% endblock %}
                </div>

            </div>

        </main>
        <!-- /.container -->

        <!-- Bootstrap core JavaScript ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="/js/jquery-3.3.1.slim.min.js"></script>
        <script src="/js/popper.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>

        {% block javascripts %}{% endblock %}

    </body>
</html>
