{% if is_granted('ROLE_SUPER_ADMIN') %}
    <form method="post" action="{{ path('app_configuration_delete', {'id': configuration.id}) }}" onsubmit="return confirm('{{'Are you sure you want to delete this configuration?'|trans}}');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ configuration.id) }}">
        <button class="btn btn-danger btn-sm mr-2"><i class="fas fa-trash-alt"></i></button>
    </form>
{% endif %}  
