{% if is_granted('ROLE_SUPER_ADMIN') %}
<form method="post" action="{{ path('school_delete', {'id': school.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ school.id) }}">
    <button class="btn btn-danger btn-sm mr-2"><i class="fas fa-trash-alt"></i> {{'Delete'|trans}}</button>
</form>
{% endif %}